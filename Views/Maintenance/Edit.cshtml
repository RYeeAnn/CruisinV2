@model CruisinV2.Models.Maintenance

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form class="form" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <p>Question</p>
                <input asp-for="MaintenanceQuestion" class="form-control" />
                <span asp-validation-for="MaintenanceQuestion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p>Answer</p>
                <input asp-for="MaintenanceAnswer" class="form-control" />
                <span asp-validation-for="MaintenanceAnswer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
