@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true">

<div class="home-container">
    <!-- Hero Section -->
    <div class="hero-section">
        <!-- Decorative Background Elements -->
        <div class="decorative-bg">
            <div class="circle-large"></div>
            <div class="circle-small"></div>
            <div class="diagonal-lines"></div>
            <div class="floating-icons">
                <!-- Floating icons handled by external CSS file -->
                <i class="fa fa-car"></i>
                <i class="fa fa-wrench"></i>
                <i class="fa fa-tachometer-alt"></i>
            </div>
        </div>

        <div class="hero-content-wrapper">
            <div class="hero-content">
                <h1 class="hero-title">CruisinV2</h1>
                <p class="hero-subtitle">Your ultimate guide to understanding your car better.</p>
                <button class="cta-button" onclick="scrollToFeatures()">Explore Features</button>
            </div>

            <div class="hero-graphic">
                <img src="https://i.pinimg.com/originals/8b/13/2c/8b132c13e4378b02e401cd4c6968ef75.gif" alt="Car Graphic">
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="features" id="features-section">
        <h2 class="features-title">Explore Our Features</h2>
        <div class="features-grid">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fa fa-car"></i>
                </div>
                <h3>Warning Lights</h3>
                <p>Understand what your car is trying to tell you.</p>
                <a href="/WarningLights" class="feature-button">Learn More</a>
            </div>
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fa fa-wrench"></i>
                </div>
                <h3>Maintenance Tips</h3>
                <p>Learn how to keep your car in top shape.</p>
                <a href="/Maintenance" class="feature-button">Learn More</a>
            </div>
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fa fa-info-circle"></i>
                </div>
                <h3>Privacy Policy</h3>
                <p>Learn how we protect your data.</p>
                <a href ="/Home/Privacy" class="feature-button">Learn More</a>
            </div>
        </div>
    </div>

<div class="quiz-section">
    <h2>Think You Know Cars?</h2>
    <p>Take a quick quiz and test your knowledge about cars!</p>
    <button class="cta-button" onclick="startQuiz()">Start Quiz</button>
</div>

<!-- Quiz Modal -->
<div id="quiz-modal" class="quiz-modal">
    <div class="quiz-modal-content">
        <span class="close-modal" onclick="closeQuizModal()">&times;</span>
        <h3>Car Knowledge Quiz</h3>
        <div id="quiz-content">
            <p id="quiz-question"><strong>Question 1:</strong> Loading...</p>
                <div id="quiz-answers" class="quiz-answers">
                    <button>Option 1</button>
                    <button>Option 2</button>
                    <button>Option 3</button>
                    <button>Option 4</button>
                </div>
        </div>
        <div id="quiz-footer">
            <div id="quiz-feedback" style="font-size: 1.2rem; text-align: center; margin-top: 10px;"></div>
            <p id="quiz-score"></p>
            <button id="next-question-btn" onclick="nextQuestion()">Next Question</button>
        </div>
    </div>
</div>


</div>

<!-- Styling -->
<style>
    /* Global Styles */
    body {
        font-family: 'Poppins', Arial, sans-serif;
        background: linear-gradient(135deg, #1e1e2e, #2a2a3c);
        margin: 0;
        padding: 0;
        color: white;
    }
</style>
