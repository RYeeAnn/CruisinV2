@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true">

<div class="home-container">
    <!-- Hero Section -->
    <div class="hero-section">
        <!-- Decorative Background Elements -->
        <div class="decorative-bg">
            <div class="circle-large"></div>
            <div class="circle-small"></div>
            <div class="diagonal-lines"></div>
            <div class="floating-icons">
                <!-- Floating icons handled by external CSS file -->
                <i class="fa fa-car"></i>
                <i class="fa fa-wrench"></i>
                <i class="fa fa-tachometer-alt"></i>
            </div>
        </div>

        <div class="hero-content-wrapper">
            <div class="hero-content">
                <h1 class="hero-title">Welcome to CruisinV2</h1>
                <p class="hero-subtitle">Your ultimate guide to understanding your car better.</p>
                <button class="cta-button">Explore Features</button>
            </div>

            <div class="hero-graphic">
                <img src="https://cdn.dribbble.com/users/2214172/screenshots/6548347/ae86.gif" alt="Car Graphic">
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="features">
        <h2 class="features-title">Explore Our Features</h2>
        <div class="features-grid">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fa fa-car"></i>
                </div>
                <h3>Warning Lights</h3>
                <p>Understand what your car is trying to tell you.</p>
                <button class="feature-button">Learn More</button>
            </div>
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fa fa-wrench"></i>
                </div>
                <h3>Maintenance Tips</h3>
                <p>Learn how to keep your car in top shape.</p>
                <button class="feature-button">Learn More</button>
            </div>
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fa fa-info-circle"></i>
                </div>
                <h3>Privacy Policy</h3>
                <p>Learn how we protect your data.</p>
                <button class="feature-button">Learn More</button>
            </div>
        </div>
    </div>
</div>

<!-- Styling -->
<style>
    /* Global Styles */
    body {
        font-family: 'Poppins', Arial, sans-serif;
        background: linear-gradient(135deg, #1e1e2e, #2a2a3c);
        margin: 0;
        padding: 0;
        color: white;
    }

    .home-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    /* Hero Section */
    .hero-section {
        position: relative;
        overflow: hidden;
        padding: 100px 20px;
        background: linear-gradient(135deg, #007bff, #1e1e2e);
        color: white;
        border-radius: 15px;
        margin-bottom: 50px;
        box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.5);
    }

    .hero-content-wrapper {
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: relative;
        z-index: 1;
    }

    .hero-content {
        max-width: 50%;
    }

    .hero-title {
        font-size: 4rem;
        text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.2);
        margin-bottom: 15px;
    }

    .hero-subtitle {
        font-size: 1.5rem;
        margin-bottom: 20px;
    }

    .cta-button {
        background: linear-gradient(135deg, #ff7f50, #ff4500);
        color: white;
        font-size: 1.2rem;
        padding: 12px 24px;
        border: none;
        border-radius: 25px;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0px 5px 15px rgba(255, 69, 0, 0.5);
    }

    .cta-button:hover {
        background: linear-gradient(135deg, #ff4500, #ff7f50);
        box-shadow: 0px 10px 20px rgba(255, 69, 0, 0.8);
    }

    .hero-graphic {
        max-width: 45%;
    }

    .hero-graphic img {
        max-width: 100%;
        border-radius: 10px;
        box-shadow: 0px 5px 20px rgba(0, 0, 0, 0.5);
    }

    /* Decorative Elements */
    .decorative-bg .circle-large {
        position: absolute;
        top: -50px;
        right: -80px;
        width: 150px;
        height: 150px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
    }

    .decorative-bg .circle-small {
        position: absolute;
        bottom: -30px;
        left: -60px;
        width: 100px;
        height: 100px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
    }
    
    /* Features Section */
    .features {
        text-align: center;
    }

    .features-title {
        font-size: 3rem;
        margin-bottom: 30px;
        color: #fff;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
    }

    .feature-card {
        background: linear-gradient(135deg, #23232e, #3a3a4d);
        border-radius: 15px;
        padding: 30px;
        text-align: center;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .feature-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.5);
    }

    .feature-icon {
        font-size: 3rem;
        color: #ff7f50;
        margin-bottom: 20px;
    }

    .feature-card h3 {
        font-size: 1.8rem;
        margin-bottom: 10px;
        color: white;
    }

    .feature-card p {
        color: #ccc;
        font-size: 1.2rem;
        margin-bottom: 15px;
    }

    .feature-button {
        background: linear-gradient(135deg, #ff7f50, #ff4500);
        color: white;
        padding: 10px 20px;
        border-radius: 20px;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .feature-button:hover {
        background: linear-gradient(135deg, #ff4500, #ff7f50);
    }
</style>
