@model WarningLights

@{
    ViewData["Title"] = "Warning Light Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Title">
        </div>
        <div class="col-md-6">
            <h2>@Model.Title</h2>
            <p>@Model.Name</p>
            <p><strong>Details:</strong></p>
            <p>@Model.Description</p>
            <a asp-action="Index">Back to list</a>
        </div>
    </div>
</div>
