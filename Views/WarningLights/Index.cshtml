@model List<CruisinV2.Models.WarningLights>

@{
    ViewData["Title"] = "Warning Lights";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Title</p>
                    <a asp-controller="WarningLights" asp-action="Details" asp-route-name="@item.Name" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
</div>
